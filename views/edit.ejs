<body class="text-bg-dark p-lg-5">

<%- include('partials/alerts') %> 


<div class="container bootstrap snippets bootdey">
  <h1 class="text-primary">Edit Profile</h1>
    <hr>
<div class="row">
    <!-- left column -->
    <div class="col-md-3">
      <div class="text-center">
        <img src="\assets\brand\exportFormalities.jpeg" class="avatar img-circle img-thumbnail" alt="avatar">      
    
      </div>
    </div>
    
    <!-- edit form column -->
    <div class="col-md-9 personal-info">
     
      <h3>Personal info</h3>
      
      <form class="form-horizontal" role="form" action="/profile/<%= currentUser.id%>/?_method=PUT" method="POST">
        <div class="form-group">
          <label class="col-lg-3 control-label">Name:</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" name="name" value="<%= currentUser.name %>">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" name="email" value="<%= currentUser.email %>">
          </div>
        </div>
        <div class="p-lg-2 col-lg-3">
          <input class ="btn btn-primary" type="submit">
        </div>
      </form>
    </div>
</div>
</div>
<hr>








</body>